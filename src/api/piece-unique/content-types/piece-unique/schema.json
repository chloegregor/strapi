{
  "kind": "collectionType",
  "collectionName": "piece_uniques",
  "info": {
    "singularName": "piece-unique",
    "pluralName": "pieces-uniques",
    "displayName": "piece-unique"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titre": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "reserve": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "slug": {
      "type": "uid",
      "targetField": "titre",
      "required": true
    }
  }
}
